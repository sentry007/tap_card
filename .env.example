# Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================
# Firebase Configuration
# ================================
# Get these from Firebase Console > Project Settings > General
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_STORAGE_BUCKET=your_storage_bucket_here

# ================================
# Environment
# ================================
# Options: development, staging, production
APP_ENV=development

# ================================
# API Configuration
# ================================
# Base URL for your backend API (if you add one later)
API_BASE_URL=https://api.tapcard.example.com

# ================================
# Security
# ================================
# Set to true in production to enforce HTTPS
ENFORCE_HTTPS=false

# Set to true to enable rate limiting
ENABLE_RATE_LIMITING=true

# Set to true to enable detailed logging (disable in production)
ENABLE_DEBUG_LOGGING=true

# ================================
# Error Tracking (Optional)
# ================================
# Sentry DSN for error tracking
# SENTRY_DSN=your_sentry_dsn_here

# ================================
# Feature Flags (Optional)
# ================================
# Enable/disable features without code changes
FEATURE_NFC_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false
FEATURE_OFFLINE_MODE_ENABLED=true
